# Docker環境設定ファイル
# このファイルを.envにコピーして使用してください

# ポート設定
BACKEND_PORT=5000
FRONTEND_PORT=8100
REDIS_PORT=6379

# データベース設定
DATABASE_PATH=/app/data/database.db

# Redis設定
REDIS_HOST=redis

# Node環境
NODE_ENV=production

# FTP設定 (オプション)
FTP_DEFAULT_TIMEOUT=60000
FTP_DEFAULT_RETRY_COUNT=3

# ファイルサイズ制限 (MB)
MAX_FILE_SIZE_MB=500